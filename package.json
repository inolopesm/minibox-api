    "prettier": "^3.0.3",
    "serverless": "^3.35.2",
    "serverless-domain-manager": "^7.1.2",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^13.1.0",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
