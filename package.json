    "@types/jest": "^29.5.5",
    "@types/node": "^18.17.14",
    "@types/pg": "^8.10.3",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
